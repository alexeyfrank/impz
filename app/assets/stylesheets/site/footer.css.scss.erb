.footer {
  margin-top: 10px;
  min-height: 160px;
  background-color: #e8e9e9;
  border-bottom: 2px solid #ffffff;

  .row {
      margin-top: 15px;
  }
  h3, h4 {
    font-size: 18px;
    font-weight: normal;
    font-family: 'Open Sans';
    color: #426175;

    &.phone {
        font-size: 20px;

        span {
            font-size: 24px;
        }
    }
  }

  h3 {
    text-transform: uppercase;
  }

  p {
    font-family: 'Open Sans';
    color: #6a8190;
    margin-top: 13px;
    margin-bottom: 0;
    &:last-child {
        margin-bottom: 10px;
    }
  }
}