!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "ИМПЗ"
    = csrf_meta_tags

    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"

    %link(href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet')
    = stylesheet_link_tag "site", :media => "all"
    %link(href="favicon.ico" rel="shortcut icon")

  %body
    = render 'layouts/shared/web/header'
    .container.top-sections
      .row
        .span3
          = image_tag asset_path('deyatelnost-1.png')
          = link_to 'Современное производство', page_path(:about, anchor: :manufacture)
          -#%p Краткое описание раздела, описывающее его содержание
        .span3
          = image_tag asset_path('deyatelnost-2.png')
          = link_to 'Преимущества продукции', page_path(:about, anchor: :benefits)
          -#%p Краткое описание раздела, описывающее его содержание
        .span3
          = image_tag asset_path('deyatelnost-3.png')
          = link_to 'Что мы выпускаем', page_path(:products)
          -#%p Краткое описание раздела, описывающее его содержание
        .span3
          = image_tag asset_path('deyatelnost-4.png')
          = link_to 'Выезд специалиста', '#'
          -#%p Краткое описание раздела, описывающее его содержание

    #content.container.content
      = bootstrap_flash
      = yield

    = render 'layouts/shared/web/footer'
    = render 'layouts/shared/web/footer_company'

    = javascript_include_tag "site"
    = render 'layouts/shared/web/counters/yandex'
